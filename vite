#!/usr/bin/env node

// تشغيل vite مباشرة من node_modules
const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

const nodeModulesVite = path.join(__dirname, 'node_modules', 'vite', 'bin', 'vite.js');

if (fs.existsSync(nodeModulesVite)) {
  const child = spawn('node', [nodeModulesVite, ...process.argv.slice(2)], {
    stdio: 'inherit',
    cwd: process.cwd()
  });
  
  child.on('exit', (code) => {
    process.exit(code);
  });
} else {
  console.error('❌ لم يتم العثور على vite في:', nodeModulesVite);
  process.exit(1);
}
#!/usr/bin/env node

// Enhanced vite wrapper with better error handling
const { execSync } = require('child_process');
const fs = require('fs');

try {
  // Try to execute vite using npx (most reliable)
  console.log('🚀 Starting development server...');
  execSync('npx vite --host :: --port 8080', { 
    stdio: 'inherit',
    env: { ...process.env }
  });
} catch (error) {
  console.error('❌ Failed to start vite:', error.message);
  process.exit(1);
}
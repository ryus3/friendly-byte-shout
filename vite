#!/usr/bin/env node

// استخدام JavaScript بدلاً من bash لضمان التوافق
const { execSync } = require('child_process');
const fs = require('fs');

// التحقق من وجود vite في مواقع مختلفة
if (fs.existsSync('./node_modules/.bin/vite')) {
    execSync('./node_modules/.bin/vite ' + process.argv.slice(2).join(' '), { stdio: 'inherit' });
} else if (fs.existsSync('./node_modules/vite/bin/vite.js')) {
    execSync('node ./node_modules/vite/bin/vite.js ' + process.argv.slice(2).join(' '), { stdio: 'inherit' });
} else {
    execSync('npx vite ' + process.argv.slice(2).join(' '), { stdio: 'inherit' });
}
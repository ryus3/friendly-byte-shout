#!/usr/bin/env node

// استيراد vite مباشرة
try {
  // محاولة 1: require مباشر
  require('./node_modules/vite/bin/vite.js');
} catch (error1) {
  try {
    // محاولة 2: dynamic import
    import('./node_modules/vite/bin/vite.js');
  } catch (error2) {
    try {
      // محاولة 3: execSync
      const { execSync } = require('child_process');
      execSync('npx vite', { stdio: 'inherit' });
    } catch (error3) {
      console.error('❌ فشل في تشغيل vite:', error3.message);
      process.exit(1);
    }
  }
}
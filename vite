#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');

// Direct path to vite
const vitePath = path.join(__dirname, 'node_modules', 'vite', 'bin', 'vite.js');

// Get all arguments passed to this script
const args = process.argv.slice(2);

// If no arguments provided, default to dev mode with host and port
if (args.length === 0) {
  args.push('--host', '::', '--port', '8080');
}

// Execute vite with node
const child = spawn('node', [vitePath, ...args], {
  stdio: 'inherit',
  cwd: __dirname,
  env: {
    ...process.env,
    NODE_ENV: 'development'
  }
});

child.on('error', (error) => {
  console.error('❌ Error starting vite:', error.message);
  process.exit(1);
});

child.on('exit', (code) => {
  process.exit(code || 0);
});